<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".FriendSelectActivity">

    <Button
        android:id="@+id/addFriendButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="添加好友"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewInvitationButton"
        android:layout_below="@id/addFriendButton"
        android:text="好友邀请"
        />
    <EditText
        android:id="@+id/findFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewInvitationButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/findFriendButton"
        android:layout_toStartOf="@+id/findFriendButton"
        android:layout_marginRight="8dp"
        android:hint="Enter text here" />

    <Button
        android:id="@+id/findFriendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewInvitationButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="查找" />
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/findFriend"
        />

</RelativeLayout>